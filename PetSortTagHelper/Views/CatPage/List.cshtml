@model IEnumerable<Cat>

<table class="table-striped">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Порода</th>
            <th>Возраст</th>
            <th>Паспорт</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Breed</td>
                <td>(@DateTime.Today-@item.Birthday)</td>
                <td>@item?.Passport?.Number </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Add">Добавить</a>
</div>